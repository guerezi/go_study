    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go"
        },
        {
            "name": "Connect to server",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "main.go",
            "port": 3030,
            "host": "localhost",
            "substitutePath": [
                {
                    "from": "/app",
                    "to": "${workspaceFolder}"
                }
            ],
        },
    ]
}